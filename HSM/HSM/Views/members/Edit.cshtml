@model HsmBI.Members

@{
    ViewBag.Title = "Edit Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="pageheader">
    <h2><i class="icon icon-edit"></i> Edit - @Model.LastName&nbsp;@Model.OtherNames  </h2>
    <div class="breadcrumb-wrapper">
        <span class="label">You are here:</span>
        <ol class="breadcrumb">
            <li><a href="~/">HSoG</a></li>
            <li><a href="~/members/">Membership</a></li>
            <li class="active">Edit Member's Information</li>
        </ol>
    </div>
</div>

<div class="row">
@using (Html.BeginForm("edit", "members", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
    <div class="panel panel-primary">

        <section class="panel-heading" >
           <div class="panel-btns" >
               <a href="" class="minimize" >&minus;</a>
           </div>
            <div class="panel-title" >
                <div class="form-group">
                    <button type="submit" class="btn btn-primary-alt">Update Member</button>
                    <a role="button" class="btn btn-default" href="@Url.Action("index")">Cancel</a>
                </div>
            </div>
            <p>
                @if (TempData["error"] != null)
                {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <strong><span class="glyphicon glyphicon-exclamation-sign"></span> Warning!</strong> @TempData["error"].
                    </div>
                }
        </p>
         
            
        </section>
        <div class="panel-body" >
           

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                @Html.HiddenFor(model => model.MemberId)
                @Html.HiddenFor(model => model.Photo)

    <section class="col-xs-12 col-md-6">

        <div class="form-group">
            @Html.LabelFor(model => model.Code)

            @Html.TextBoxFor(model => model.Code, new { @class = "form-control", placeholder = "Enter Member Code", required = "required" })
            @Html.ValidationMessageFor(model => model.Code)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LastName, "Last Name")
            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "Enter Last Name", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OtherNames, "Other Names")
            @Html.TextBoxFor(model => model.OtherNames, new { @class = "form-control", placeholder = "Enter First Name then Other Name", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Gender)
            @Html.DropDownListFor(model => model.Gender, (SelectList)ViewBag.Gender, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Birthday)
            <input class="form-control" data-val="true" data-val-date="The field Birthday must be a date." data-val-required="The Birthday field is required." id="Birthday" name="Birthday" placeholder="Select Birthday" required="required" type="date" value="@Model.Birthday.ToString("yyy-MM-dd")">
            @*@Html.TextBoxFor(model => model.Birthday, new { @class = "form-control", placeholder = "Select Birthday", required = "required", type = "date", value = Model.Birthday.ToString("yyy-MM-dd") })*@
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaritalStatus, "Marital Status")
            @Html.DropDownListFor(model => model.MaritalStatus, (SelectList)ViewBag.MaritalStatus, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HomeAddress, "Home Address")
            @Html.TextBoxFor(model => model.HomeAddress, new { @class = "form-control", placeholder = "Enter Home Address", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OfficeAddress, "Office Address")
            @Html.TextBoxFor(model => model.OfficeAddress, new { @class = "form-control", placeholder = "Enter Office Address", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MobileNo, "Mobile No")
            @Html.TextBoxFor(model => model.MobileNo, new { @class = "form-control", placeholder = "Enter Mobile No", required = "required", type = "tel" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmailAddress, "Email Address")
            @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control", placeholder = "Enter Email Address", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nationality)
            @Html.TextBoxFor(model => model.Nationality, new { @class = "form-control", placeholder = "Enter Natonality [sample: Nigerian]", required = "required" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Wedding)
            <input class="form-control" data-val="true" data-val-date="The field Wedding must be a date." id="Wedding" name="Wedding" placeholder="Select Wedding Anniversary" required="required" type="date" value="@(((DateTime)Model.Wedding.GetValueOrDefault()).ToString("yyy-MM-dd"))">
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OccupationId, "Occupation")
            @Html.DropDownListFor(model => model.OccupationId, (SelectList)ViewBag.OccupationId, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nickname)
            @Html.TextBoxFor(model => model.Nickname, new { @class = "form-control", placeholder = "Enter Nickname" })
        </div>

        @*<div class="form-group">
                @Html.LabelFor(model => model.ChoirSplit_Id, "Choir Split")
                @Html.DropDownListFor(model => model.ChoirSplit_Id, (SelectList)ViewBag.ChoirSplits)
            </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.Remarks)
            @Html.TextBoxFor(model => model.Remarks, new { @class = "form-control", placeholder = "Enter Remarks" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StateOfOriginId, "State of Origin")
            @Html.DropDownListFor(model => model.StateOfOriginId, (SelectList)ViewBag.StateOfOriginId, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LGA)
            @Html.TextBoxFor(model => model.LGA, new { @class = "form-control", placeholder = "Enter Local Govt Area" })
        </div>

        @*<div class="form-group">
                @Html.LabelFor(model => model.Photo)

                @Html.TextBoxFor(model => model.Photo)
                @Html.ValidationMessageFor(model => model.Photo)
            </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.PartId, "Choir Part")
            @Html.DropDownListFor(model => model.PartId, (SelectList)ViewBag.PartId, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RobeNo, "Robe Number")
            @Html.TextBoxFor(model => model.RobeNo, new { @class = "form-control", placeholder = "Enter Robe Number" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.JoinedOn)
            <input class="form-control" data-val="true" data-val-date="The field JoinedOn must be a date." data-val-required="The JoinedOn field is required." id="JoinedOn" name="JoinedOn" placeholder="Enter Local Govt Area" type="date" value="@Model.JoinedOn">
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HomeTown)
            @Html.TextBoxFor(model => model.HomeTown, new { @class = "form-control", placeholder = "Enter Home Town" })
        </div>

        @*<div class="form-group">
                @Html.LabelFor(model => model.Picture)

                @Html.TextBoxFor(model => model.Picture)
                @Html.ValidationMessageFor(model => model.Picture)
            </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.Academy_Id, "Level in Daystar Academy")
            @Html.DropDownListFor(model => model.Academy_Id, (SelectList)ViewBag.Academy_Id, new { @class = "form-control" })
        </div>


        <div class="form-group">
            <label for="thumb">Upload photo</label>
            <input type="file" id="mfile" name="mfile">
        </div>

    </section>

            
        </div>

       <section class="panel-footer" >
           <div class="form-group">
               <button type="submit" class="btn btn-primary">Update Member</button>
               <a role="button" class="btn btn-default" href="@Url.Action("index")">Cancel</a>
           </div>
       </section>
    </div>
}
</div>