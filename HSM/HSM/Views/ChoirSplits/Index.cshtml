@model IEnumerable<HsmBI.ChoirSplits>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb">
    <li><a href="../../">Home</a></li>
    <li>@Html.ActionLink("Choir Splits", "Index", "ChoirSplits") </li>
    <li class="active">List</li>
</ol>
<hr />
<h2>Choir Splits</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered table-responsive table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SplitId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SplitId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SplitId })
        </td>
    </tr>
}

</table>
